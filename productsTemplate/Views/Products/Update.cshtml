@model productsTemplate.Models.ProductsTable

<div class="container">
    <div class="row">
        <h1>Update Products</h1>


        <form class="row g-3" method="post" enctype="multipart/form-data">


           

            <div class="col-md-12">
                <label for="inputEmail4" class="form-label">Product Name</label>
                <input type="text" value="@ViewBag.product.prodName" class="form-control" asp-for="prodName">
            </div>

            <div class="col-md-12">
                <label for="inputEmail4" class="form-label">Product Price</label>
                <input type="text" value="@ViewBag.product.prodPrice" class="form-control" asp-for="prodPrice">
            </div>

            <div class="col-md-12">
                <label for="inputEmail4" class="form-label">Product Description</label>
                <input type="text" value="@ViewBag.product.prodDesc" class="form-control" asp-for="prodDesc">
            </div>

            <div class="col-md-12">
                <img src="~/images/@ViewBag.product.prodImage" width="50px" />
                <label for="inputEmail4" class="form-label">Product Image</label>
                <input type="file" class="form-control" name="imageFile" asp-for="imageFile" value="@ViewBag.product.prodImage">
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Update Products</button>
            </div>
        </form>
    </div>
</div>




